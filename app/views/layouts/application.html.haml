!!! HTML
%html
  %head
    %title IIE Strasbourg - Sondages
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = csrf_meta_tags
    = yield :head
  %body
    .navbar.navbar-fixed-top.index
      .navbar-inner
        .container
          .brand
            = link_to 'SondagIIEs', root_url
          %ul.nav.pull-right
            - if current_user.nil?
              %li= link_to "Login", main_app.login_path("ares")
            - else
              %li= link_to "Logged as #{current_user.first_name} #{current_user.last_name}", '#'
              %li= link_to "Logout", main_app.logout_path

    .container= yield

    = yield :javascript
